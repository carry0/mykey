<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/home_framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/framelayout_home"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/framelayout_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_home_white_36dp"
        android:gravity="center"
        android:padding="18dp"
        android:text="首页" />

    <TextView
        android:id="@+id/framelayout_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_message_black_36dp"
        android:gravity="center"
        android:padding="18dp"
        android:text="信息" />

    <TextView
        android:id="@+id/framelayout_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_hdr_strong_black_36dp"
        android:gravity="center"
        android:padding="18dp"
        android:text="发现" />

    <TextView
        android:id="@+id/framelayout_my"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_account_circle_white_36dp"
        android:gravity="center"
        android:padding="18dp"
        android:text="我" />
